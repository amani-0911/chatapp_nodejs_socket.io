
<%- include('parts/header') %> 
<%- include('parts/navbar') %> 
<div class="row">
    <input type="hidden" id="chatId" value="<%= chatId%>">
    <div class="col col-12 col-md-3">
        <div class="infoFriend">
        <img  class="imgFrined" src="/<%= friendData.image%>"> <br>
        <a class="FrinedName" href="/profile/<%= friendData.id%>"><%= friendData.username%> </a>
        <button class="btn btn-success" id="callBtn">Video Call</button>
    </div>
</div>
    <div class="col col-12 col-md-8 ">
        <div  class="messages" id="messages-container">
            <% for(let m of messages) {%> 
                <span class="messages-item">
                     <%if(m.sender===myId ){ %> 
                    <p class="contentMsgR"><%= m.content %> </p>
                      <%}else{ %>
                        <p class="contentMsg"><%= m.content %> </p>
                        <% } %>  
                </span>
                <% } %> 
        </div>
        <div class="mesages-form">
            <textarea id="message" class="form-control"></textarea>
            <button id="sendBtn" class="btn btn-primary">Send</button>
        </div>
    </div>
</div>

<%- include('parts/scripts') %>
<script src="/socket.io/socket.io.js"></script>
<script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
<script src="/js/sockets/init.js"></script>
<script src="/js/sockets/chat.js"></script>
</body>
</html>
